pipeline {
    agent any

    tools {
        // Install the Maven version configured as "M3" and add it to the path.
        nodejs  "NODEJS"
    }

    stages {
        stage('Build') {
            steps {
                // Get some code from a GitHub repository
                git branch: 'main', url: 'https://github.com/pratyu-J/jenkins_demo_node.git'

                // Run Maven on a Unix agent.
                sh "npm install"

                // To run Maven on a Windows agent, use
                // bat "mvn -Dmaven.test.failure.ignore=true clean package"
            }     
        }

        stage("install Dependencies"){
            steps{
                sh "npm install"
            }
        }
        stage("build project"){
            steps{
                sh "npm run build"
            }
        }
        stage("run test"){
            steps{
                sh "npm test"
            }
        }
        stage('Archive Artifacts') {
            steps {
                archiveArtifacts artifacts: 'dist/**'
            }
        }
        stage("publish artifact"){
            steps{
                withCredentials([usernamePassword(credentialsId: 'nexus', passwordVariable: 'nexus-pass', usernameVariable: 'nexus-user')]){
                    script {

                        def nexusRegistry = 'http://54.247.201.131:8081/repository/npmrepo/'

                        if (isUnix()) {
                            sh """
                              cat <<EOF > .npmrc
                              registry=${nexusRegistry}
                              always-auth=true
                              _auth=\$(echo -n "\${nexus-user}:\${nexus-pass}" | base64)
                              EOF
                              npm publish
                              rm .npmrc
                            """
                        } else {
                            bat """
                              echo registry=${nexusRegistry} >> .npmrc
                              echo always-auth=true >> .npmrc
                              echo _auth=%nexus-user%:%nexus-pass% | base64 /d >> .npmrc
                              npm publish
                              del .npmrc
                            """
                        }
                }
            }
        }
    }
}


